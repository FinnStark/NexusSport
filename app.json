{
  "expo": {
    "name": "NexusSport",
    "slug": "NexusSport",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "@/assets/images/nexus-sport-logo.png",
    "scheme": "nexussport",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "@/assets/images/nexus-sport-logo.png",
        "backgroundColor": "#00171F"
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/nexus-sport-logo.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#00171F"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
